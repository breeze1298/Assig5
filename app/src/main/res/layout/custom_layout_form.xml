<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="Form"
            type="com.breeze.assignment_5_final.roomdb.FormEntity" />

    </data>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/tools"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Name"
                    android:fontFamily="sans-serif-black">
                </TextView>

                <TextView
                    android:layout_marginStart="150dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/fName"
                    android:text="@={Form.name}">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Email ID"
                    android:fontFamily="sans-serif-black">
                </TextView>

                <TextView
                    android:layout_marginStart="150dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/fEmail"
                    android:text="@={Form.email}">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Mobile No"
                    android:fontFamily="sans-serif-black">
                </TextView>

                <TextView
                    android:layout_marginStart="150dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/fMobile"
                    android:text="@={Form.mobile}">
                </TextView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Address"
                    android:fontFamily="sans-serif-black">
                </TextView>

                <TextView
                    android:layout_marginStart="150dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textSize="25sp"
                    android:id="@+id/fAddress"
                    android:text="@{Form.address}">
                </TextView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal">


                <ImageView
                    android:layout_marginStart="30dp"
                    android:layout_width="55dp"
                    android:layout_height="75dp"
                    android:src="@drawable/ic_edit"
                    android:id="@+id/editDetails"/>

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_width="55dp"
                    android:layout_height="75dp"
                    android:src="@drawable/ic_delete"
                    android:id="@+id/deleteDetails"/>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>